<Window x:Class="PongGameWpf2025.Game_Online.Name_Input_Online.InputNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PongGameWpf2025.Game_Online.Name_Input_Online"
        mc:Ignorable="d"
    Title="Név megadása" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Add meg a neved:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="60" Margin="0,0,5,0" Click="OkButton_Click"/>
                <Button Content="Mégsem" Width="60" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
